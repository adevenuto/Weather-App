<% include partials/header %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-5" id="search-field">

        <div class="input-group">
          <input type="text" class="form-control" id="search" placeholder="Enter Location...">
          <span class="input-group-btn">
            <button class="btn btn-secondary search-btn" type="button">Go!</button>
          </span>
        </div>

      <div class="col-md-6">
        <div class="form-group">
          <label for="lat">latitude</label>
          <input type="text" class="form-control" id="lat" value=""placeholder="Latitude" disabled>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="lat">longitude</label>
          <input type="text" class="form-control" id="lng" value=""placeholder="Longitude" disabled>
        </div>
      </div>
    </div>
    <div class="col-sm-7" id="weather-display">
      <div class="display-top">
        <div id="weatherData">
          <div id="date"></div>
          <div id="time"></div>
          <div id="controls">
            <button class="btn btn-default" id="c">C</button>
            <button class="btn btn-default" id="f">F</button>
            <button class="btn btn-default" id="traffic">Traffic</button>
          </div>
        </div>
        <div id="currentWeather">
          <div id="summary"></div>
          <div id="temperature" class="temp"></div>
        </div>
      </div>
      <div class="display-bottom" id="forecast"></div>

    </div>
  </div>
</div> <!-- container-fluid -->

<!-- Map -->

<div class="container-fluid" id="map-container">
  <div class="row">
    <div id="map">
      <!-- Google map -->
    </div>
  </div>
  <div class="spinner">
    <div id="circularG_1" class="circularG"></div>
    <div id="circularG_2" class="circularG"></div>
    <div id="circularG_3" class="circularG"></div>
    <div id="circularG_4" class="circularG"></div>
    <div id="circularG_5" class="circularG"></div>
    <div id="circularG_6" class="circularG"></div>
    <div id="circularG_7" class="circularG"></div>
    <div id="circularG_8" class="circularG"></div>
  </div>
</div>
<% include partials/footer %>
